# Первый бокс лайоут


ScreenManager:
    Screen:
        name: "main"
        BoxLayout:
            size_hint_y: None
            height: root.height - toolbar.height

            FitImage:
                source: "image/3.jpg"

        BoxLayout:
            orientation: "vertical"
            MDToolbar:
                id: toolbar
                md_bg_color: app.colors["toolbar"]
                specific_text_color: app.colors["text"]
                title: "Объекты"
                MDIconButton:
                    id: menu_button
                    icon: "menu"
                    pos_hint: {"center_y": 0.5}
                    on_release: app.menu.open()
                MDIconButton:
                    id: refresh_button
                    icon: "refresh"
                    pos_hint: {"center_y": 0.5}
#                    on_release: app.menu.open()
            MDTabs:
                id: tabs
                background_color: app.colors["toolbar"]
                text_color_active: app.theme_cls.accent_color
                on_tab_switch: app.on_tab_switch(*args)


    MDScreen:
        name: "card"
        md_bg_color: app.colors["card_bg"]
        BoxLayout:
            orientation: "vertical"
            MDToolbar:
                id:title
                md_bg_color: app.colors["toolbar"]
                specific_text_color: app.colors["text"]
                opposite_colors: True
                left_action_items: [["arrow-left", lambda x: app.callback()]]

            TaskContext:
                id: taskContext

            MDFloatingActionButtonSpeedDial:
                id: bottom_button
                data: app.buttons
                on_open: app.button_click_open(self)
                on_close: app.button_click_close(self)
                rotation_root_button: True
                bg_color_root_button: app.colors["toolbar"]

    Screen:
        name: "my_tasks"
        MDLabel:
            text: "Moi zayabki"

<DropMenu>:
    items: [{"text": i} for i in app.menu_items]
    caller: app.root.ids.toolbar.ids.right_actions
    width_mult: 5


<TaskContext@BoxLayout>:
    orientation: "vertical"
    Card_Label:
        font_size: "30sp"
        size_hint_y: .2
        id: title_text
    MDSeparator:
    Card_Label:
        id: main_text
        size_hint_y: .9

    MDSeparator:
    Card_Label:
        id: datetime_text
        size_hint_y: .2

    Card_Label:
        id: executor
        size_hint_y: .2

<Card_Label@MDLabel>
    pos_hint:{"right":1}
    size_hint_x: .92
    valign: "top"





<Tab>:
    ScrollView:
        id: scroll_view
        MDList:
            id: main_list

