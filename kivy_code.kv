# Первый бокс лайоут
ScreenManager:
    Screen:
        name: "main"
        BoxLayout:
            orientation: "vertical"
            MDToolbar:
                title: "Объекты"
            MDTabs:
                id: tabs
                on_tab_switch: app.on_tab_switch(*args)


    Screen:
        name: "card"
        BoxLayout:
            orientation: "vertical"

            MDToolbar:
                id:title
                opposite_colors: True
                left_action_items: [["arrow-left", lambda x: app.callback()]]
            TaskContext:
                id: taskContext



<TaskContext@BoxLayout>:
    orientation: "vertical"
    MDLabel:
        font_size: "30sp"
        size_hint_y: .2
        id: title_text
        text: "Объект"
        halign: "left"
    MDSeparator:
    MDLabel:
        id: main_text
        size_hint_y: .4
        text: "Текст заявки"
        halign: "left"
    MDSeparator:






<Tab>:
    ScrollView:
        id: scroll_view
        MDList:
            id: main_list
